{
  "coc.preferences.formatOnSaveFiletypes": ["ruby", "eruby", "rust", "javascript", "typescriptreact"],
  "rust-analyzer.inlayHints.enable": true,
  "rust-analyzer.lens.enable": true,
  "codeLens.enable": true,
  "languageserver": {
    "sorbet": {
      "command": "srb",
      "args": [
        "tc",
        "--typed",
        "true",
        "--enable-all-experimental-lsp-features",
        "--lsp",
        "--disable-watchman"
      ],
      "filetypes": ["ruby"],
      "rootPatterns": ["sorbet/config"],
      "initializationOptions": {},
      "settings": {}
    },
    "ruby-lsp": {
      "command": "bundle",
      "args": ["exec", "ruby-lsp"],
      "filetypes": ["ruby", "eruby"],
      "initializationOptions": {
        "enabledFeatures": [
          "documentHighlights",
          "documentLink",
          "documentSymbols",
          "foldingRanges",
          "selectionRanges",
          "semanticHighlighting",
          "formatting",
          "diagnostics",
          "codeActions",
          "onTypeFormatting"
        ]
      }
    },
    "rubocop": {
      "command": "rubocop-lsp",
      "filetypes": []
    },
    "solargraph-local": {
      "command": "solargraph",
      "args": ["stdio"],
      "filetypes": []
    }
  }
}
