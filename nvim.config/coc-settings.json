{
  "codeLens.enable": true,
  "coc.preferences.formatOnSaveFiletypes": ["ruby", "eruby", "javascript"],
  "languageserver": {
    "sorbet": {
      "command": "srb",
      "args": [
        "tc",
        "--typed",
        "true",
        "--enable-all-experimental-lsp-features",
        "--lsp",
        "--disable-watchman",
        "--dir",
        "."
      ],
      "filetypes": [],
      "rootPatterns": ["sorbet/config"],
      "initializationOptions": {},
      "settings": {}
    },
    "rubocop": {
      "command": "bundle",
      "args": ["exec", "rubocop-lsp"],
      "filetypes": ["ruby"]
    },
    "solargraph-local": {
      "command": "bundle",
      "args": ["exec", "solargraph", "stdio"],
      "filetypes": ["ruby"]
    }
  }
}
